//Define a structure named 'State' which contains four fields name, population,lit_rate, income. Define structure variable st1. Assign the values for your structure members as Maharashtra, 1000000, 5.8,6000.00 respectively.

#include<stdio.h>
struct State
{
     char name[50];
     int population;
     float lit_rate;
     float income;
};
 int main()
 {
     struct State st1;
     strcpy(st1.name,"Maharashtra");
     st1.population=1000000;
     st1.lit_rate=5.8;
     st1.income=6000.00;
     
     printf("State name: %s\n", st1.name);
     printf("Population: %d\n", st1.population);
     printf("Literacy rate: %d\n", st1.lit_rate);
     printf("Income: %f\n", st1.income);
        return 0;
         
     
 }
